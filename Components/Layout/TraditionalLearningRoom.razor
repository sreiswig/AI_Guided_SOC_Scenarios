@* Traditional.razor *@
<div class="traditional-room">
    <h2>Traditional Learning Room</h2>
    <div>
        <label for="lessonTitle">Lesson Title:</label>
        <input type="text" id="lessonTitle" @bind="lessonTitle" />
    </div>
    <div>
        <label for="lessonContent">Lesson Content:</label>
        <textarea id="lessonContent" @bind="lessonContent"></textarea>
    </div>
    <div>
        <label for="userInput">Your Input:</label>
        <input type="text" id="userInput" @bind="userInput" />
    </div>
    <button @onclick="Submit">Submit</button>
</div>

@code {
    private string lessonTitle;
    private string lessonContent;
    private string userInput;

    private void Submit()
    {
        // Handle submission logic here
    }
}

