@* ChatComponent.razor *@

<div class="centered-chat-container">
  <main class="chat-window">
  </main>

  <footer class="chat-input-area">
    <input type="text" placeholder="@InputPlaceholder" class="chat-input" />
    <button class="send-button" @onclick="Debug">@SendButtonText</button>
  </footer>
</div>

@code {
  [Parameter]
  public string InputPlaceholder { get; set; } = "Type your message...";

  [Parameter]
  public string SendButtonText { get; set; } = "Send";

  private async Task Debug() {
    Console.WriteLine("Testing");
    await js.InvokeVoidAsync("eval", "alert('Debug method called');");
  }

  [Inject]
  private IJSRuntime js { get; set; }
}
